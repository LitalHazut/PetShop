@model IEnumerable<PetShop.Data.Model.Animal>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/catalog.css" asp-append-version="true" />

<h1>Animals:</h1>
<p>
    <a class="btn btn-sm btn-outline-secondary" asp-action="Create">Create New Animal</a>
    <a class="btn btn-sm btn-outline-secondary" asp-action="AddCategory">Add/Delete Category</a>
</p>


<form asp-action="Index">
    @foreach(var category in ViewBag.GetCategory)
    {
        <div class="btn-group">
         <input class="btn btn-sm btn-outline-secondary" type="submit" value="@category.Name" asp-route-categoryId="@category.CategoryId"/>
        </div>
    }
</form>
<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top mt-3" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img"><image href=@Url.Content(item.PhotoUrl) height="100%" width="100%" /></svg>
                        <div class="card-body">
                            <p class="ctard-ext">@item.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.AnimalId">Edit</a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.AnimalId">Details</a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.AnimalId">Delete</a>
                                </div>
                                <div class=d-flex>
                                    <span asp-route-id="@item?.AnimalId">@item.Comments.Count</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-left" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>




