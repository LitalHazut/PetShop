@model PetShop.Data.Model.Animal

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/catalog.css" asp-append-version="true" />

<div class="row">
    <div class="imgName">
        <div><img src=@Url.Content(@Model.PhotoUrl) /></div>

        <div style="font-weight: bold;"> @Html.DisplayFor(model => model.Name)</div>
    </div>
    <div class="details">
        <div class="description">@Html.DisplayFor(model => model.Description)</div>
        <div>
            @Html.DisplayNameFor(model => model.BirthDate):
            @Html.DisplayFor(model => model.BirthDate)
        </div>
        <div>@Html.DisplayFor(model => model.Category.Name)</div>
    </div>

    <div>
        <h2>Comments:</h2>
        @foreach (var comment in ViewBag.CommentsAnimal)
        {
            <ul>
                <li>
                    @comment.Content
                    <a class="btn btn-sm btn-outline-secondary" asp-action="DeleteComment" asp-controller="Admin" asp-route-id="@comment.CommentId">Delete</a>
                </li>
            </ul>
        }
    </div>
<br />
<div>
    <a style="font-size:18px;" class="btn btn-sm btn-outline-secondary" asp-action="Index">Back to List</a>
    <a style="font-size:18px;" class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@Model?.AnimalId">Edit</a>
</div>
</div>


