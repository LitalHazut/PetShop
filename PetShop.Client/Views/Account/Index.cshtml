@model PetShop.Client.Models.LoginPageModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sign-in/">
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
<link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="signin.css" rel="stylesheet">
<body class="text-center">
    <div>
    <form method="post" asp-action="Login">
        <div>
            <p> User - Name : </p>
            <input type="text" placeholder="Enter User Name" asp-for="UserName" />
        </div>
        <div>
            <p>Password: </p>
            <input asp-for="Password" type="password" placeholder="Enter Password" />
        </div>
        <input class="w-100 btn btn-lg btn-primary" type="submit" value="Login" />
    </form>
    </div>
        <img  src=~/images/bg.jpg/>
</body>



