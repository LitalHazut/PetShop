@model IEnumerable<PetShop.Data.Model.Animal>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/catalog.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h1>Catalog of Animals:</h1>

<div class="catalogBody">
    <div class="categoriesList">
        <ul>
            <li>All Animals</li>
            @foreach (var category in Model)
            {
                <li>
                    @category.Name
                </li>
            }
        </ul>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>            
                <th>
                    @Html.DisplayNameFor(model => model.PhotoUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src=@Url.Content(item.PhotoUrl) />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                 <a asp-action="Details" asp-route-id="@item.AnimalId">Details</a>
                 </td>
                </tr>
                
            }
        </tbody>
    </table>
